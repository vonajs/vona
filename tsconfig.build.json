{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "packages-cli/cabloy-cli/**/*.ts",
    "packages-utils/**/*.ts",
    "packages-vona/**/*.ts",
    "src/**/*.ts",
    "**/.metadata/**/*.ts",
    ".vona/**/*.ts"
  ],
  "exclude":
  [
    "packages-cli/cabloy-cli/**/*.d.ts",
    "packages-utils/**/*.d.ts",
    "packages-vona/**/*.d.ts",
    "src/**/*.d.ts",
    "packages-cli/cabloy-cli/**/*.test.ts",
    "packages-utils/**/*.test.ts",
    "packages-vona/**/*.test.ts",
    "src/**/test/**/*.test.ts"
  ]
}
