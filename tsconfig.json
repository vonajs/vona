{
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolvePackageJsonImports": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/module/**/*", //
    "src/module-system/**/*",
    "src/module-vendor/**/*",
    "src/suite/**/*",
    "src/suite-vendor/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules", //
    "**/dist/**",
    "**/*.min.js",
    "backend/cli/templates"
  ]
}
