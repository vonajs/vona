<%
// options
const options = {
  where: { language: site.language && site.language.current },
  orders: [
    [ 'tagAtomCount', 'desc' ],
  ],
};
// tags
const tags = await ctx.meta.util.performAction({
  method: 'post',
  url: '/a/base/tag/list',
  body: {
    atomClass: site.atomClass,
    options,
  },
});
// output
const js=`var _tags=${JSON.stringify(tags)};`;
echo(js);
%>
