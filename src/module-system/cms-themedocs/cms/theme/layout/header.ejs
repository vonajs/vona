<!doctype html>
<html lang="<%=site.language?site.language.current:ctx.locale%>">
<head>
  <%- await include('./header/head.ejs') %>
</head>
<body>
  <header style="display:none;">
    <%- await include('./header/menu.ejs') %>
  </header>
  <script>
    // iframe
    var __header = document.getElementsByTagName('header')[0];
    if(window.self !== window.top){
      var html = document.getElementsByTagName('html')[0];
      if(!html.className){
        html.className = 'in-iframe';
      }else{
        html.className += ' in-iframe';
      }
      __header.style.display = 'none';
    }else{
      __header.style.display = '';
    }
  </script>
  <div class="container container-site">
