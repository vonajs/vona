body {
  color: #111;
  overflow-y: scroll;
}

html.in-iframe {
  .category-sidebar {
    top: 0;
  }
}

@media (max-width: 991px) {
  header {
    margin: 0 0 70px 0;
  }
}

@media (min-width: 992px) {
  header {
    margin: 0 0 90px 0;
  }
}

footer {
  margin: 0;
  padding: 20px;
  text-align: center;
  background-color: #343d46;
  color: #fff;
  position: relative;
  z-index: 99;

  .small {
    font-size: 12px;
    line-height: 16px;
  }

  .small a:hover {
    color: white;
  }
}

.navbar-default {
  background: #343d46;
  z-index: 99;
  padding: 0 1rem;

  .navbar-brand {
    padding: 16px 15px;
    display: flex;
    align-items: center;
    color: #c3d4e7;
    text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
    text-transform: uppercase;
  }

  .navbar-brand .logo {
    height: 32px;
    margin-right: 5px;
  }

  .navbar-nav > li.nav-item > a {
    color: white;
    text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
    text-transform: uppercase;
  }

  .navbar-brand.active,
  .navbar-brand.active:focus,
  .navbar-nav > li.nav-item.active > a,
  .navbar-nav > li.nav-item.active > a:focus {
    color: white;
    background-color: #4d555c;
  }

  .navbar-brand:focus,
  .navbar-brand:hover,
  .navbar-nav > li.nav-item > a:focus,
  .navbar-nav > li.nav-item > a:hover {
    background-color: #eee;
  }

  .navbar-nav .dropdown li.nav-item > a {
    color: #333;
  }

  .navbar-nav .dropdown .navbar-nav {
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 4px;
    -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

  form.search {
    input {
      width: 150px;
    }
  }
}

.navbar {
  form.search {
    button[type='submit'] {
      display: none;
    }
  }
}

.navbar-nav .github img {
  height: 16px;
  margin-top: -4px;
}

.container-site {
}

.section-index .project {
  text-align: center;
}

.section-index .project .features {
  margin-top: 40px;
}

.btn-default,
.btn-default:focus {
  color: #c3d4e7;
  background-color: #4d555c;
  border: 1px solid #2e3135;
  background: linear-gradient(#4d555c, #1c1e21);
  border-radius: 2px;
  transition: all 0.4s ease-in;
  outline: 0;
}

.btn-default:hover {
  color: white;
}

.btn-warning,
.btn-warning:focus {
  color: #777;
  outline: 0;
}

section {
  width: 100%;
  padding: 30px;
  margin: 0;
  position: relative;
  background: #fbfbfb;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  -ms-border-radius: 2px;
  -o-border-radius: 2px;
  border-radius: 2px;
  border: 1px solid #cbcbcb;
  -webkit-box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.09), inset 0px 0px 2px 2px rgba(255, 255, 255, 0.5),
    inset 0 0 5px 5px rgba(255, 255, 255, 0.4);
  -moz-box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.09), inset 0px 0px 2px 2px rgba(255, 255, 255, 0.5),
    inset 0 0 5px 5px rgba(255, 255, 255, 0.4);
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.09), inset 0px 0px 2px 2px rgba(255, 255, 255, 0.5),
    inset 0 0 5px 5px rgba(255, 255, 255, 0.4);
}

.sidebar {
  margin: 0 0 20px 0;
}

.article-list {
  .media {
    border-bottom: 1px solid #f0f0f0;
    padding: 10px 0;
  }
  .article-list-content {
    .article-list-title {
      margin-bottom: 4px;
    }
    p {
      margin: 0;
      font-size: 14px;
      line-height: 22px;
    }
  }
  .stat {
    clear: both;
  }

  .media-right {
    float: right;
  }
  .media-object {
    width: 125px;
    height: 100px;
    border-radius: 4px;
    border: 1px solid #f0f0f0;
  }
}

.article-edit {
  font-size: 16px;
  padding-left: 6px;
}

.category-sidebar {
  width: 280px;
  position: fixed;
  left: 0;
  top: 68px;
  bottom: 0;
  padding-bottom: 60px;
  z-index: 1;
  border-right: 1px solid #efefef;
  background: #fafbff;
  overflow-y: auto;
  transition: left 0.4s ease-in;
}

.category-sidebar .title {
  height: 30px;
  text-align: center;
}

.doc-container .article-doc {
  margin-left: 280px;
  transition: margin-left 0.4s ease-in;
}

@media (max-width: 767px) {
  .doc-container.sidebar-collapse-mobile .category-sidebar {
    left: -280px;
  }

  .doc-container.sidebar-collapse-mobile .article-doc {
    margin-left: 0;
  }

  .doc-container .article-doc {
    margin-left: 0;
  }
}

@media (min-width: 768px) {
  .doc-container.sidebar-collapse .category-sidebar {
    left: -280px;
  }

  .doc-container.sidebar-collapse .article-doc {
    margin-left: 0;
  }
}

.category-sidebar-toggle {
  float: left;
  height: 50px;
  padding: 15px 15px;
  font-size: 18px;
  line-height: 20px;
  color: white;
  opacity: 0.7;
}

.category-sidebar-toggle:hover,
.category-sidebar-toggle:focus {
  color: white;
  opacity: 1;
}

.media-list {
  padding-left: 0;
  list-style: none;
}

.jstree-article-header {
  color: #666;
}
