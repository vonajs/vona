import { Entity, EntityBase } from 'vona-module-a-database';
import { Api, v } from 'vona-module-a-openapi';
import { $locale } from '../.metadata/index.ts';

@Entity('<%=argv.moduleResourceName%>')
export class Entity<%=argv.resourceNameCapitalize%> extends EntityBase {
  @Api.field(v.openapi({ description: $locale('Name') }), v.min(3))
  name: string;

  @Api.field(v.openapi({ description: $locale('Description') }), v.optional())
  description?: string;
}
